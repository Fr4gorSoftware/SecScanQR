<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="pref_use_gms_vision"
        android:title="Use GMS scanner if available"/>

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_camera_entries"
        android:entryValues="@array/pref_camera_values"
        android:key="pref_camera"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_camera"
        />

    <ListPreference
        android:defaultValue="false"
        android:entries="@array/pref_auto_scan_entries"
        android:entryValues="@array/pref_auto_scan_values"
        android:key="pref_auto_scan"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_auto_scan" />
    <ListPreference
        android:defaultValue="false"
        android:entries="@array/pref_auto_clipboard_entries"
        android:entryValues="@array/pref_auto_clipboard_values"
        android:key="pref_auto_clipboard"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_auto_clipboard" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_day_night_mode_entries"
        android:entryValues="@array/pref_day_night_mode_values"
        android:key="pref_day_night_mode"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_day_night_mode" />
</PreferenceScreen>
